@model WebApplication.Models.Tweet

<div>
    <h4>Tweet details</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TweetUser)
        </dt>

        <dd>
            @Html.TweetUserFor(Model.TweetUser)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd>
            <h3>@Html.DisplayFor(model => model.Text)</h3>
        </dd>
    </dl>
    <hr />
    @if (Model.TweetComments.Count > 0)
    {
        <h5>Comments:</h5>
        <hr />
    }
    @foreach (var comment in Model.TweetComments)
    {
        <h5>@Html.TweetCommentFor(comment)
        <small>
            author: @Html.TweetUserFor(comment.TweetUser)
            at: @Html.DisplayFor(i => comment.Created)
        </small></h5>
        <hr />
    }
    @Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-default" })
</div>
